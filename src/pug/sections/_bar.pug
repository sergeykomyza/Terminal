div.bar.animate__animated

    .bar__top
        a(href="").hidden-992
            img(src="img/home/bar_logo.png", alt="logo").bar__logo
        .bar__item.open-menu
            span МЕНЮ
            .bar__btn
                span
                span
                span

    .bar__center
        .bar__item
            span ЗАКАЗАТЬ ЗВОНОК
            button.bar__btn(data-toggle="modal" data-target="#order-call")
                img(src="img/home/bar_phone_icon.png", alt="bar_phone_icon")
        .bar__item.hidden-992
            span ОБРАТНАЯ СВЯЗЬ
            button.bar__btn(data-toggle="modal" data-target="#modal-feedback")
                img(src="img/home/bar_message_icon.png", alt="bar_message_icon")
        .bar__item.hidden-992
            span РАССЧИТАТЬ СТОИМОСТЬ
            button.bar__btn(data-toggle="modal" data-target="#modal-calc")
                img(src="img/home/bar_calc_icon.png", alt="bar_calc_icon")

    a(href="").bar__social
        img(src="img/home/bar_facebook_icon.png", alt="bar_facebook_icon")

    a(href="").visible-992
        img(src="img/home/bar_logo.png", alt="logo")